@using HairSalon.Models;
@model Employee;

<h1> Add a new Employee</h1>

@using (Html.BeginForm())
{

  @Html.LabelFor(model=>model.Name)
  @Html.TextBoxFor(model=>model.Name)

  @Html.DropDownListFor(model => model.Specialty, new SelectList(Enum.GetValues(typeof(SpecialtyType))),
  "Select Specialty")

<input type="submit" value="Create" />
}

<p>@Html.ActionLink("Show all Employees", "Index", new { @class = "action-link-button" })</p>

